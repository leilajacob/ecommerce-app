<p><%= image_tag @product.image.url(:medium) %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency @product.price %>
</p>

<% if @product.quantity <= 5 && @product.quantity >= 1 %>
<p>
  Order now! Only <%= @product.quantity %> left in stock! 
</p>
<% elsif @product.quantity == 0 %>
<p>
  This item is no longer in stock.
</p>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @product.rating %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.catergory_id %>
</p>

<% if notice != nil %>
  <p id="notice" class="alert alert-danger"><%= notice %></p>
<% end %> 

<% if @product.quantity > 0 %>
<p>
  <%= form_tag(add_to_cart_path) do %>
    <%= number_field_tag :quantity, nil, placeholder: "How Many?" %>
    <%= hidden_field_tag :product_id, @product.id %>
    <%= submit_tag "Add to Cart", class: "btn btn-success" %>
  <% end %>
</p>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
